extends layout

block content
	div.row
		div.col-sm-6.col-md-4.col-md-offset-4
			h1.text-center.login-title Login
				br
				br
				div.account-wall
					img(class='profile-img', src='http://www.sammobile.com/wp-content/themes/sammobile-4/assets/img/layout/login-avatar.png')
					br
					br
					form(class='form-signin', action='/login', method='POST')
						input(type='text', name='username' class='form-control', placeholder='Username',required, autofocus)
						input(type='password', name='password' class='form-control', placeholder='Password', required)
						button(class='btn btn-lg btn-primary btn-block', type='submit') Login
						span.clearfix
						br
					a(href='/register', class='text-center new-account') Create an account
					#message
					if message
						h1.text-center.error-message #{message}